@media only screen and (max-width: 700px) {
  .search-bar-container {
    width: 90%;
  }

  .container {
    width: 100%; /*When we do mobile design change this to 100% */
    margin: 0 auto;
  }
  .col-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
  }
  .item-container {
    flex-basis: 30%;
    margin-right: 10px;
    margin-left: 7px;
    flex-grow: 1;
  }
}

@media only screen and (max-width: 1130px) {
  .search-bar-container {
    width: 90%;
  }

  .container {
    width: 100%; /*When we do mobile design change this to 100% */
    margin: 0 auto;
  }
  .col-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
  }
  .item-container {
    flex-basis: 20%;
    margin-right: 10px;
    margin-left: 7px;
    flex-grow: 1;
  }
}
